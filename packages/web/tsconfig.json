{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"jsx": "preserve",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"plugins": [{ "name": "next" }],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "next-env.d.ts"],
	"exclude": ["node_modules", ".next"]
}
