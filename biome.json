{
	"$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "warn"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useConst": "error"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	},
	"files": {
		"includes": ["**", "!**/node_modules", "!**/dist", "!**/.next", "!**/drizzle", "!**/*.gen.ts"]
	}
}
